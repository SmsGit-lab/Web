<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/vr_bg"
    tools:context=".MainActivity">

    <ImageView android:layout_height="200dp" android:layout_width="200dp" android:src="@drawable/vr_pic" android:id="@+id/iv_pic"/>

    <ImageView android:layout_height="200dp" android:layout_width="200dp" android:src="@drawable/vr_video" android:id="@+id/iv_video"/>

</LinearLayout>